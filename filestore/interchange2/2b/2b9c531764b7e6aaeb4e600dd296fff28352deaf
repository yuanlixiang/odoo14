
body.o_web_client.popup_style_1 .modal.show .modal-content {
  opacity: 0;
  animation-name: fadeIn;
  animation-duration: 0.2s;
  animation-timing-function: linear;
  animation-fill-mode: forwards;
}

@-webkit-keyframes fadeIn {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

body.o_web_client.popup_style_2 .modal.show .modal-content {
  animation-name: flip;
  animation-duration: 0.2s;
  animation-timing-function: linear;
  animation-fill-mode: forwards;
  transform-origin: 50% 50%;
}

@-webkit-keyframes flip {
  0% {
    -webkit-transform: perspective(400px) rotateX(-20deg);
    -webkit-animation-timing-function: ease-out;
  }
  100% {
    -webkit-transform: perspective(400px) rotateX(0deg);
    -webkit-animation-timing-function: ease-in;
  }
}

body.o_web_client.popup_style_3 .modal.show .modal-content {
  opacity: 0;
  animation-name: bounceIn;
  animation-duration: 0.2s;
  animation-timing-function: linear;
  animation-fill-mode: forwards;
}

@-webkit-keyframes bounceIn {
  0% {
    opacity: 0 !important;
    transform: scale(0.3) translate3d(0, 0, 0) !important;
  }
  50% {
    opacity: 0.9 !important;
    transform: scale(1.5) !important;
  }
  80% {
    opacity: 1 !important;
    transform: scale(0.89) !important;
  }
  100% {
    opacity: 1 !important;
    transform: scale(1) translate3d(0, 0, 0) !important;
  }
}

body.o_web_client.popup_style_4 .modal:not(.show) .modal-content {
  transform: scale(1.2);
}

