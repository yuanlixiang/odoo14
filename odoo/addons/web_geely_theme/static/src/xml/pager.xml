<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="Pager" t-inherit="web.Pager" t-inherit-mode="extension" owl="1">
        <xpath expr="//span[hasclass('o_pager_counter')]" position="replace"/>
        <xpath expr="//button[hasclass('o_pager_previous')]" position="after">
            <span class="o_pager_counter" t-on-click.stop="">
                <input t-if="state.editing" type="text"
                    class="o_pager_value o_input"
                    autofocus=""
                    t-att-value="value"
                    t-on-blur="state.editing = false"
                    t-on-change="_onValueChange"
                    t-on-keydown.stop="_onValueKeydown"
                />
                <span t-else=""
                    class="o_pager_value"
                    t-esc="value"
                    t-on-click="_onEdit"
                />
                <span> / </span>
                <span class="o_pager_limit" t-esc="props.size"/>
            </span>
        </xpath>
    </t>
</templates>

