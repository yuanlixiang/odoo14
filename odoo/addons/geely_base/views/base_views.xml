<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
    <data>
        <record id="geely_users_login_log_tree" model="ir.ui.view">
            <field name="name">geely.users.login.log.tree</field>
            <field name="model">geely.users.login.log</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="user_id"/>
                    <field name="create_date" string="时间"/>
                    <field name="operation"/>
                </tree>
            </field>
        </record>

        <record id="geely_users_access_log_tree" model="ir.ui.view">
            <field name="name">geely.users.access.log.tree</field>
            <field name="model">geely.users.access.log</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="user_id"/>
                    <field name="create_date" string="时间"/>
                    <field name="actions_id"/>
                    <field name="module_id"/>
                </tree>
            </field>
        </record>

        <record id="view_mail_tree" model="ir.ui.view">
            <field name="name">mail.mail.tree.inherit</field>
            <field name="model">mail.mail</field>
            <field name="inherit_id" ref="mail.view_mail_tree"/>
            <field name="arch" type="xml">
                <field name="email_from" position="after">
                    <field name="email_to"/>
                </field>
            </field>
        </record>

        <record id="tree_geely_operation_history" model="ir.ui.view">
            <field name="name">geely.operation.history.tree</field>
            <field name="model">geely.operation.history</field>
            <field name="arch" type="xml">
                <tree create="0">
                    <field name="create_date"/>
                    <field name="login"/>
                    <field name="model"/>
                </tree>
            </field>
        </record>

        <record id="form_geely_operation_history" model="ir.ui.view">
            <field name="name">geely.operation.history.form</field>
            <field name="model">geely.operation.history</field>
            <field name="arch" type="xml">
                <form >
                    <group>
                        <group>
                            <field name="login"/>
                            <field name="create_date"/>
                        </group>
                        <group>
                            <field name="model"/>
                        </group>
                    </group>
                    <group>
                        <field name="download_ids"/>
                    </group>
                </form>
            </field>
        </record>


        <!--        附件下载记录-->
        <record id="tree_geely_operation_attachment_history" model="ir.ui.view">
            <field name="name">geely.operation.attachment.history.tree</field>
            <field name="model">geely.operation.attachment.history</field>
            <field name="arch" type="xml">
                <tree create="0">
                    <field name="create_date"/>
                    <field name="login"/>
                    <field name="model"/>
                    <field name="filename"/>
                    <field name="filename_id"/>
                </tree>
            </field>
        </record>

        <record id="act_geely_operation_history" model="ir.actions.act_window">
            <field name="name">纪录下载日志</field>
            <field name="res_model">geely.operation.history</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="act_geely_attachment_operation_history" model="ir.actions.act_window">
            <field name="name">附件日志</field>
            <field name="res_model">geely.operation.attachment.history</field>
            <field name="view_mode">tree</field>
        </record>
    </data>

    <!--选择月份弹窗-->
    <data>
        <record id="view_geely_choose_month_wizard_form" model="ir.ui.view">
            <field name="name">geely.choose.month.wizard.form</field>
            <field name="model">geely.choose.month.wizard</field>
            <field name="arch" type="xml">
                <form string="选择月份">
                    <group>
                        <group>
                            <field name="month" options="{'datepicker': {'showType': 'months'}}"/>
                        </group>
                        <group/>
                    </group>

                    <footer>
                        <button name="btn_confirm" type="object" string="确认" class="oe_highlight"/>
                        or
                        <button special="cancel" string="取消" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>

    <!--选择日期弹窗-->
    <data>
        <record id="view_geely_choose_date_wizard_form" model="ir.ui.view">
            <field name="name">geely.choose.date.wizard.form</field>
            <field name="model">geely.choose.date.wizard</field>
            <field name="arch" type="xml">
                <form string="选择日期">
                    <group>
                        <group>
                            <field name="date"/>
                        </group>
                        <group/>
                    </group>

                    <footer>
                        <button name="btn_confirm" type="object" string="确认" class="oe_highlight"/>
                        or
                        <button special="cancel" string="取消" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>

</odoo>